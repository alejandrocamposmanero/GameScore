<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MiTema" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="ratingBarStyle">@style/Estrellas</item>
        <item name="colorControlActivated">@color/colorEstrella</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="spinnerStyle">@style/SpinnerSave</item>
        <item name="spinnerDropDownItemStyle">@style/SpinnerSave</item>
    </style>

    <style name="Estrellas" parent="Widget.AppCompat.RatingBar.Small" />

    <style name="ProfilePicture">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SpinnerSave">
        <item name="backgroundColor">@color/colorPrimary</item>
    </style>
</resources>